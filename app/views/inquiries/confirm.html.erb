
<!-- app/views/inquiries/confirm.html.erb -->

<%# ヘッダー部分 %>
<%= render 'layouts/header' %>

<h1>問い合わせ内容の確認</h1>

<p>
  <strong>名前:</strong>
  <%= @inquiry.name %>
</p>

<p>
  <strong>メールアドレス:</strong>
  <%= @inquiry.email %>
</p>

<p>
  <strong>メッセージ:</strong>
  <%= @inquiry.message %>
</p>

<%= form_for @inquiry, url: inquiries_complete_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :message %>

  <div class="actions">
    <%= link_to "問い合わせる", thanks_inquiries_path %>
  </div>
<% end %>

<%# ヘッダーにトップ画面ボタンを追加。layouts/headerに以下の内容を追加。 %>
<%= link_to "トップ画面", root_path %>

<%# %>
